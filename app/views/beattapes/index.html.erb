<h1>Listing beattapes</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>Source</th>
    <th>Author</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @beattapes.each do |beattape| %>
  <tr>
    <td><%= beattape.title %></td>
    <td><%= beattape.content %></td>
    <td><%= beattape.source %></td>
    <td><%= beattape.author %></td>
    <td><%= link_to 'Show', beattape %></td>
    <td><%= link_to 'Edit', edit_beattape_path(beattape) %></td>
    <td><%= link_to 'Destroy', beattape, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

