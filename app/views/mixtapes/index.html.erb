<h1>Listing mixtapes</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>Source</th>
    <th>Author</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @mixtapes.each do |mixtape| %>
  <tr>
    <td><%= mixtape.title %></td>
    <td><%= mixtape.content %></td>
    <td><%= mixtape.source %></td>
    <td><%= mixtape.author %></td>
    <td><%= link_to 'Show', mixtape %></td>
    <td><%= link_to 'Edit', edit_mixtape_path(mixtape) %></td>
    <td><%= link_to 'Destroy', mixtape, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

